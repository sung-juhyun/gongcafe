<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/title_cafeInfo"
        android:layout_width="118dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:text="Gong Cafe"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/handDrip"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="#핸드드립"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_cafeInfo" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/textView3"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="#핸드드립"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_cafeInfo" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/coffee"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="   #커피"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/handDrip"
        app:layout_constraintTop_toBottomOf="@+id/title_cafeInfo" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/brunch"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="13dp"
        android:text="  #브런치"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/coffee"
        app:layout_constraintTop_toBottomOf="@+id/title_cafeInfo" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/subTitle_cafeInfo"
        android:layout_width="194dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="목원대 근처의 조용한 감성카페"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handDrip" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/address_text"
        android:layout_width="192dp"
        android:layout_height="22dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="13dp"
        android:text="대전광역시 유성구 봉명동 123-4"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/location_img"
        app:layout_constraintTop_toBottomOf="@+id/cafePicture3_img" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/review1_text"
        android:layout_width="192dp"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="46dp"
        android:text="숨겨진 분위기 좋은 작은카페"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/check1_btn"
        app:layout_constraintTop_toBottomOf="@+id/menu3_text" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/review2_text"
        android:layout_width="192dp"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:text="커피 맛이 깔끔하고 좋아요"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/check2_btn"
        app:layout_constraintTop_toBottomOf="@+id/review1_text" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/menu2_text"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="밀크티"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dot2_img"
        app:layout_constraintTop_toBottomOf="@+id/menu1_text" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/time_text"
        android:layout_width="155dp"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="13dp"
        android:text="AM 11 : 00 ~ PM 10 :00"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/time_img"
        app:layout_constraintTop_toBottomOf="@+id/address_text" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/menu3_text"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:text="크로플"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dot3_img"
        app:layout_constraintTop_toBottomOf="@+id/menu2_text" />

    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/robotolight"
        android:id="@+id/menu1_text"
        android:layout_width="115dp"
        android:layout_height="21dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:text="아이스 아메리카노"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dot1_img"
        app:layout_constraintTop_toBottomOf="@+id/time_text" />

    <Button
        android:id="@+id/moreMenu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="16dp"
        android:text="메뉴 더 보러가기 →"
        android:textColorLink="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu3_text"
        app:layout_constraintTop_toBottomOf="@+id/cafePicture3_img" />

    <Button
        android:id="@+id/moreReview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="217dp"
        android:layout_marginTop="53dp"
        android:text="후기 더 보러가기 →"
        android:textColorLink="#D8D8D8"
        app:layout_constraintStart_toEndOf="@+id/check2_btn"
        app:layout_constraintTop_toBottomOf="@+id/moreMenu_btn" />

    <ImageView
        android:id="@+id/cafePicture2_img"
        android:layout_width="195dp"
        android:layout_height="90dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cafePicture1_img"
        app:layout_constraintTop_toBottomOf="@+id/subTitle_cafeInfo"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/cafePicture3_img"
        android:layout_width="197dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@+id/cafePicture1_img"
        app:layout_constraintTop_toBottomOf="@+id/cafePicture2_img"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/cafePicture1_img"
        android:layout_width="218dp"
        android:layout_height="180dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitle_cafeInfo"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/check2_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check1_btn"
        app:srcCompat="@drawable/check" />

    <ImageView
        android:id="@+id/check1_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dot3_img"
        app:srcCompat="@drawable/check" />

    <ImageButton
        android:id="@+id/heart_btn"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/heart" />

    <ImageButton
        android:id="@+id/share_btn"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toStartOf="@+id/heart_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/share_black"/>
    <ImageView
        android:id="@+id/time_img"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_img"
        app:srcCompat="@drawable/time" />

    <ImageView
        android:id="@+id/location_img"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cafePicture1_img"
        app:srcCompat="@drawable/location" />

    <ImageView
        android:id="@+id/dot1_img"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_img"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/dot2_img"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dot1_img"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/dot3_img"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dot2_img"
        app:srcCompat="@drawable/dot" />

</androidx.constraintlayout.widget.ConstraintLayout>